<div class="registration-form">
	<h2 class="registration-form__heading">Register</h2>
	<form class="form-horizontal" id="registration-form" method="post" action="/user/registration">
	<div class="form-group">
      <label class="control-label col-sm-6" for="name">Name</label>
      <div class="col-sm-12">
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-6" for="email">Email</label>
      <div class="col-sm-12">
        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
      </div>
    </div>
    <div class="form-group has-error">
      <label class="control-label col-sm-6" for="mobile">Mobile</label>
      <div class="col-sm-12">
        <input type="number" class="form-control" id="mobile" placeholder="Enter mobile number" name="mobileNumber">
      </div>
    </div>
    <div class="form-group has-error">
      <label class="control-label col-sm-6" for="account">Account Type</label>
      <div class="col-sm-12">
        Active Life Member  
        <input type="radio" id="account" name="account" value="LIFE_MEMBER">
        Active Yearly Member 
        <input type="radio" id="account" name="account" value="YEARLY_MEMBER">
        
        1 Month Free Trial 
        <input type="radio" id="account" name="account" value="TRIAL_MEMBER"> 
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-6" for="pwd">Password</label>
      <div class="col-sm-12">          
        <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-6" for="cpwd">Confirm Password:</label>
      <div class="col-sm-12">
        <input type="password" class="form-control" id="cpassword" placeholder="Confirm password" name="cpassword">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-12">
        <button type="submit" class="btn btn-default btn1">Register</button>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12 ">
           Already registered: <a href="/user/login">Login Here</a>
        </div>
    </div>
  </form>
</div>